rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default to deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow public read access only to designated public folders
    match /site_content/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /services/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // Users can write to their own profile images path
    match /user_profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admins can write to feedback reports, users can read their own.
    // (This requires more complex rules, for now we keep it admin-write)
    match /feedback_reports/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Allow authenticated users to upload testimonials
    match /testimonials_body_images/{userId}/{allPaths=**} {
        allow read: if true; // Or make more restrictive if needed
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
