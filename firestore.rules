rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for Admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.roles[0] == 'admin';
    }

    // USER PROFILES: Users can read/write their own profile. Admins can read all profiles.
    match /userProfiles/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read, list: if isAdmin();
      
      // NOTIFICATIONS SUBCOLLECTION: Users can only interact with their own notifications.
      match /notifications/{notificationId} {
        allow read, update, list: if request.auth.uid == userId;
        // Functions write notifications, so no client-side create needed.
        allow create: if false; 
      }
    }

    // SERVICES: Publicly readable, writable only by admins.
    match /services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // SITE PROFILES (e.g., mentor): Publicly readable, writable only by admins.
    match /siteProfiles/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // BOOKINGS: Users can create/read their own bookings. Admins can read/write all.
    match /bookings/{bookingId} {
      allow read, update: if request.auth.uid == resource.data.uid;
      allow create: if request.auth.uid != null;
      allow read, write: if isAdmin();
    }

    // GLOBAL AVAILABILITY: Publicly readable, writable only by admins.
    match /globalAvailability/{date} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // TESTIMONIALS: Users can create. Admins can R/W. Public can read approved.
    match /testimonials/{testimonialId} {
      allow create: if request.auth.uid != null;
      allow read: if resource.data.status == 'approved';
      allow read, write: if isAdmin();
    }
    
    // RESOURCES: Writable only by admins. Readable by any authenticated user.
    match /resources/{resourceId} {
        allow read: if request.auth.uid != null;
        allow write: if isAdmin();
    }
    
    // USER MESSAGES: Users can create messages. Admins can read all and write replies.
    match /userMessages/{messageId} {
        allow read: if request.auth.uid == resource.data.uid || isAdmin();
        allow create: if request.auth.uid != null;
        allow update: if isAdmin(); // Admin can update status
    }
    
    // BADGES: Publicly readable, writable only by admins.
    match /badges/{badgeId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // FEEDBACK SUBMISSIONS: Writable and readable only by admins.
    match /feedbackSubmissions/{submissionId} {
        allow read, write: if isAdmin();
    }
  }
}
